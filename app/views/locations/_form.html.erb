<%= render 'locations/notification' %>

<%= form_for location do |f| %>

  <%= hidden_field(:location, :user_id, value: current_user.id) %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br>

  <%= f.label :state %>
  <%= f.collection_select :state, states, :last, :first %><br>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %><br>

  <%= f.collection_check_boxes :activity_ids, activities, :id, :name %><br>

  <%= f.fields_for :activities, location.activities.build do |i| %>
    <%= i.label :name, 'What type of activity is it?' %>
    <%= i.text_field :name %><br>

    <%= i.label :occurrence %>
    <%= i.collection_select :occurrence, weekdays, :last, :first %><br>

    <%= i.label :details %>
    <%= i.text_area :details %><br><br>
  <% end %>

  <%= f.submit %>
<% end %>
