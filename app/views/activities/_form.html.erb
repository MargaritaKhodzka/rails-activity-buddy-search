<%= render 'layouts/error_messages', object: @activity %>

<%= form_for ([@location, @activity]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :occurrence %>
  <%= f.collection_select :occurrence, weekdays, :last, :first %><br>

  <%= f.label :time %>
  <%= f.time_field :time %><br>

  <%= f.label :details %>
  <%= f.text_area :details %><br><br>

  <%= f.submit %>
<% end %>

<br>
<%= fa_icon "arrow-left" %> <%= link_to 'Back to activities', activities_path %>
