<%= render 'layouts/error_messages', object: @location_activity %>
<%= fa_icon "arrow-left" %> <%= link_to 'Back to activities', activities_path %><br><br>

<%= form_for @location_activity, url: activity_location_activities_path do |f| %>

  <%= f.hidden_field :activity_id %>

  <p>Select a location for <%= @activity.name %></p>
  <div class="form-group">
    <%= f.collection_select :location_id, Location.all, :id, :name, prompt: 'Select Location' %>
  </div>

  <div class="form-group">
    <%= f.label :rating, 'New activity rating (1-5)' %>
    <%= f.number_field :rating, in: 1..5, step: 1, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
